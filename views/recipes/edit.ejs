<% include ../partials/header %>

<div class="row justify-content-center ">
	<div class="col-md-12 text-center">
		<h2>Edit Recipe</h2>
	</div>
	<div class="col-4 col-xs-12">
		<form action="/recipes/<%=recipe._id%>?_method=PUT" method="POST" >
			<div class="form-group">
				<input class="form-control" type="text" name="recipe[name]" placeholder="name" value="<%=recipe.name%>">
            </div>
			<div class="form-group">
				<label for="image">Image</label>
				<input type="file" id="image" name="image"  accept="image/*"  >
            </div>
			<div class="form-group">
                    <input class="form-control" type="text" name="recipe[ingredients]" placeholder="ingredients" value="<%=recipe.ingredients%>">
                </div>
			<div class="form-group">
				<input class="form-control" type="text" name="recipe[description]" placeholder="description" value="<%=recipe.description%>">
            </div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/recipes">Go Back</a>
    </div>
</div>
<% include ../partials/footer %>
<!-- enctype="multipart/form-data" -->